<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Venue</th>
      <th>Order status</th>
      <th>Last 4</th>
      <th>Credit card brand</th>
      <th>Section</th>
      <th>Row</th>
      <th>Seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.venue_id %></td>
        <td><%= order.order_status %></td>
        <td><%= order.last_4 %></td>
        <td><%= order.credit_card_brand %></td>
        <td><%= order.section %></td>
        <td><%= order.row %></td>
        <td><%= order.seat %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

